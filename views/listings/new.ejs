<% layout('/layouts/boilerplate') -%>
<body style="background-color: #f0eff4">
  <div
    class="container d-flex justify-content-center align-items-center"
    style="min-height: 100vh"
  >
    <div
      class="card shadow p-5"
      style="
        max-width: 38rem;
        width: 100%;
        background-color: #ffffff;
        border-left: 0.5rem solid #832161;
      "
    >
      <h2 class="mb-4 text-center" style="color: #3d2645; margin-top: -0.5rem;">
        Create New Listing
      </h2>

      <form
        action="/listings"
        method="POST"
        class="needs-validation"
        novalidate
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="title" class="form-label" style="color: #3d2645"
            >Title</label
          >
          <input
            type="text"
            class="form-control"
            name="title"
            placeholder="e.g., Beachside Villa"
            style="background-color: #f0eff4"
            required
          />
          <div class="valid-feedback">Title looks good</div>
          <div class="invalid-feedback">Please write a title</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label" style="color: #3d2645"
            >Description</label
          >
          <textarea
            name="description"
            class="form-control"
            rows="3"
            placeholder="Brief description..."
            style="background-color: #f0eff4"
            required
          ></textarea>
          <div class="valid-feedback">Description looks good</div>
          <div class="invalid-feedback">Please write a description</div>
        </div>

        <!-- <div class="mb-3">
          <label for="image" class="form-label" style="color: #3d2645"
            >Image URL</label
          >
          <input
            type="url"
            class="form-control"
            name="image"
            placeholder="https://example.com/photo.jpg"
            style="background-color: #f0eff4"
          />
        </div> -->

        <div class="mb-3">
          <label for="image" class="form-label" style="color: #3d2645"
            >Upload Image</label
          >
          <input
            type="file"
            class="form-control"
            name="image"
            style="background-color: #f0eff4"
            required
          />
          <div class="valid-feedback">Image looks good</div>
          <div class="invalid-feedback">Please upload a valid format Image</div>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label" style="color: #3d2645"
            >Price</label>
          <input
            type="number"
            class="form-control"
            name="price"
            placeholder="e.g., 5000"
            style="background-color: #f0eff4"
            min="0"
            required
          />
          <div class="valid-feedback">Price looks good</div>
          <div class="invalid-feedback">Please enter a valid price.</div>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label" style="color: #3d2645"
            >Country</label
          >
          <input
            type="text"
            class="form-control"
            name="country"
            placeholder="e.g., India"
            style="background-color: #f0eff4"
            required
          />
          <div class="valid-feedback">Country looks good</div>
          <div class="invalid-feedback">Please enter a country.</div>
        </div>

        <div class="mb-4">
          <label for="location" class="form-label" style="color: #3d2645"
            >Location</label
          >
          <input
            type="text"
            class="form-control"
            name="location"
            placeholder="e.g., Goa"
            style="background-color: #f0eff4"
            required
          />
          <div class="valid-feedback">Location looks good</div>
          <div class="invalid-feedback">Please enter a location.</div>
        </div>

<div class="mb-4">
  <label for="categories" class="form-label" style="color: #3D2645;">Categories</label>
  <div class="dropdown w-100">
    <button class="btn w-100 px-3 py-2 d-flex justify-content-between align-items-center category-dropdown-btn dropdown-toggle" 
            type="button" data-bs-toggle="dropdown" aria-expanded="false">
      Select Categories
    </button>
    <ul class="dropdown-menu w-100 category-dropdown-menu">
      <% const allCategories = ["Trending", "Stays", "Mountains", "Nature Escapes", "With Pool", "Beaches", "Urban", "Snow"]; %>
      <% allCategories.forEach(cat => { %>
        <li>
          <div class="form-check px-3">
            <input class="form-check-input" type="checkbox" name="categories" value="<%= cat %>" id="cat-<%= cat %>">
            <label class="form-check-label" for="cat-<%= cat %>"><%= cat %></label>
          </div>
        </li>
      <% }) %>
    </ul>
  </div>
</div>



        <div class="d-grid">
          <button
            type="submit"
            class="btn btn-lg hover-effect"
            style="background-color: #da4167; color: white"
          >
            Add Listing
          </button>
        </div>
      </form>
    </div>
  </div>
</body>
