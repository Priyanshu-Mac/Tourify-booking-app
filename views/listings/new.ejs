<% layout('/layouts/boilerplate') -%>
<body style="background-color: #F0EFF4;">
  <div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow p-5" style="max-width: 600px; width: 100%; background-color: #ffffff; border-left: 8px solid #832161;">
      <h2 class="mb-4 text-center" style="color: #3D2645;">Create New Listing</h2>

      <form action="/listings" method="POST">
        <div class="mb-3">
          <label for="title" class="form-label" style="color: #3D2645;">Title</label>
          <input type="text" class="form-control" name="title" placeholder="e.g., Beachside Villa" style="background-color: #F0EFF4;" required>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label" style="color: #3D2645;">Description</label>
          <textarea name="description" class="form-control" rows="3" placeholder="Brief description..." style="background-color: #F0EFF4;" required></textarea>
        </div>

        <div class="mb-3">
          <label for="image" class="form-label" style="color: #3D2645;">Image URL</label>
          <input type="url" class="form-control" name="image" placeholder="https://example.com/photo.jpg" style="background-color: #F0EFF4;" required>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label" style="color: #3D2645;">Price</label>
          <input type="number" class="form-control" name="price" placeholder="e.g., 5000" style="background-color: #F0EFF4;" min="0" required>
        </div>

        <div class="mb-3">
          <label for="country" class="form-label" style="color: #3D2645;">Country</label>
          <input type="text" class="form-control" name="country" placeholder="e.g., India" style="background-color: #F0EFF4;" required>
        </div>

        <div class="mb-4">
          <label for="location" class="form-label" style="color: #3D2645;">Location</label>
          <input type="text" class="form-control" name="location" placeholder="e.g., Goa" style="background-color: #F0EFF4;" required>
        </div>

        <div class="d-grid">
          <button type="submit" class="btn btn-lg" style="background-color: #DA4167; color: white;">Add Listing</button>
        </div>
      </form>
    </div>
  </div>
</body>
