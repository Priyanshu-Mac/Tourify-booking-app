<% layout('/layouts/boilerplate') -%>
<body>

    <h3 style="margin-top: 2rem; text-align: center;">Browse <%= category %></h3>
    <div class="card-container">
    
    <% for(let listing of listings) { %>
        <a href="/listings/<%= listing._id %>">
            <div class="card" style="width: 18rem">
    <img src="<%= listing.image.path %>" class="card-img-top" alt="listingImg" />
    <div class="card-body">
        <p class="card-title">
            <%= listing.title %>
        </p>
        <p class="card-price">
            &#8377;<%= listing.price.toLocaleString("en-IN")%> / night
        </p>
    </div>
  </div>
        </a>
  
  <% } %>
  </div>

</body>