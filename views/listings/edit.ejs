<% layout('/layouts/boilerplate') -%>
<body>
    <h1>Editing Listing</h1>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="post">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%= listing.title %>">

        <label for="description">Description</label>
        <textarea name="description"><%= listing.description %></textarea>

        <label for="image">Image URL</label>
        <input type="text" name="image" value="<%= listing.image %>">

        <label for="price">Price</label>
        <input type="text" name="price" value="<%= listing.price %>">

        <label for="country">Country</label>
        <input type="text" name="country" value="<%= listing.country %>">

        <label for="location">location</label>
        <input type="text" name="location" value="<%= listing.location %>">

        <button>Edit</button>
    </form>
</body>
